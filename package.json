{
	"name": "middle.messenger.praktikum.yandex",
	"version": "1.0.0",
	"description": "Учебный проект веб-мессенджера",
	"scripts": {
		"dev:frontend": "parcel watch ./static/index.html  --no-hmr --out-dir dist --public-url dist",
		"dev:backend": "nodemon --watch ./server --exec node ./server/index.js",
		"prebuild": "shx rm -rf dist",
		"build": "parcel build static/index.html",
		"predev": "shx rm -rf dist",
		"start": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
		"lint": "esw src --ext .ts --watch --clear",
		"fix": "eslint src --ext .ts --fix",
		"style-lint": "stylelint src/**/*.css",
		"style-fix": "stylelint src/**/*.css --fix",
		"test": "TS_NODE_COMPILLER_OPTIONS='{\"module\": \"commonjs\"}' mocha --require ts-node/register src/**/*.spec.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sergeev-it-limon/middle.messenger.praktikum.yandex.git"
	},
	"keywords": [],
	"author": "Sergeev Sergey",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/sergeev-it-limon/middle.messenger.praktikum.yandex/issues"
	},
	"homepage": "https://github.com/sergeev-it-limon/middle.messenger.praktikum.yandex#readme",
	"devDependencies": {
		"@babel/core": "~7.16.0",
		"@types/chai": "~4.3.0",
		"@types/mocha": "~9.0.0",
		"@typescript-eslint/eslint-plugin": "~4.32.0",
		"@typescript-eslint/parser": "~4.32.0",
		"autoprefixer": "~9.8.6",
		"babel-plugin-transform-pug-js": "~0.4.1",
		"chai": "~4.3.4",
		"concurrently": "~6.0.0",
		"eslint": "~7.32.0",
		"eslint-watch": "~7.0.0",
		"express": "~4.17.1",
		"glob": "~7.1.7",
		"mocha": "~9.1.3",
		"nodemon": "~2.0.7",
		"parcel-bundler": "~1.12.5",
		"postcss": "~8.2.8",
		"postcss-import": "~12.0.1",
		"postcss-modules": "~3.2.2",
		"postcss-nested": "~4.2.3",
		"pug": "~3.0.2",
		"shx": "~0.3.3",
		"stylelint": "~13.13.1",
		"stylelint-config-standard": "~22.0.0",
		"ts-node": "~10.4.0",
		"typescript": "~4.4.3"
	},
	"dependencies": {
		"pug-runtime": "~3.0.1"
	}
}
